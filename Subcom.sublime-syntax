%YAML 1.2
---
# http://www.sublimetext.com/docs/3/syntax.html
name: Subcom
file_extensions:
  - sm
scope: source.text_sm
contexts:
  main:
    # - match: '│e│.*?│'
      # scope: meta.esubcom
    - match: '│.+?│'
      scope: meta.name_subcom

    - match: '~ .+?│'
      scope: meta.com_subcom
    # - match: '\[.+?\]'
    #   scope: meta.tag_subcom
    - match: '~[^ ].*?│'
      scope: meta.path_subcom